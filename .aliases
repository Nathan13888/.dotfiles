# Arch Linux AUR helper
function aurcommit() {
  MSG=$*
  if [[ -z "$1" ]]; then
    read -p "Message: " MSG
  fi
  updpkgsums
  makepkg --printsrcinfo > .SRCINFO
  git add PKGBUILD .SRCINFO
  namcap PKGBUILD
  git commit -m "$MSG"
}

