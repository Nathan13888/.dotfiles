function tarp {
  readonly source=${1:?"The SOURCE must be specified"}
  readonly target=${2:?"The TARGET must be specified"}
  program="$3"
  if [ -z ${3+x} ]; then
  	program="pigz -k -6"
  fi
  echo -e "Using compress program command '$program'\n"
  tar --use-compress-program="$program" -cf - -C "$source" . | pv > "$target"
}
