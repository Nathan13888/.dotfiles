alias s="sudo" alias sudo='sudo ' # for using other alias when using sudo
function reload {
  if [[ $SHELL == */tmux ]] ; then
    exec /usr/bin/zsh
  else
    exec $SHELL # reload whatever is $SHELL
  fi
}
