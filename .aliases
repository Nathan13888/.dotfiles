# NOTE: adjust_date uses GNU date -d (Linux only)
function adjust_date {
    date -d "$(date) $@"
}
function ag {
    local DATE=$(adjust_date $1)
    echo $DATE
    GIT_COMMITTER_DATE="$DATE" git commit --amend --date="$DATE" --no-edit
}
git-inspect-status() {
  for f in ./*; do;
    if [ -d "$f" ]; then
      echo $f
      git -C $f status -sb
    fi
  done
}
