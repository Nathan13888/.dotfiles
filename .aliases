vns() {
    if [ -z "$1" ];then
        echo "You must specify a path!"
    else
        if [ -e "$1" ];then
            echo "'$1' already exists!"
            return 1
        fi

        local SHEBANG="#!/bin/bash"
        echo "$SHEBANG" >> "$1"

        if ! [ -f "$1" ]; then
            echo "Could not find created file"
            return 1
        fi

        chmod +x "$1"
        if ! [ -x "$1" ];then
            echo "Failed to append execute permissions"
            return 1
        fi

        if [ -f "$1" ]; then
            v "$1"
        fi
    fi
}

