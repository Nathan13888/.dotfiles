#export LANG=en_US.UTF-8
#export LC_CTYPE=en_US.UTF-8

# GO LANG
#export GOROOT=/usr/local/go
export PATH=$PATH:$GOROOT/bin

export GOPATH=$HOME/golib # the first path in GOPATH is always used to install external packages
export PATH=$PATH:GOPATH/bin
export GOPATH=$GOPATH:$HOME/workspace/scripts

export PATH="$HOME/.local/bin:$PATH"

# GPG --> https://stackoverflow.com/questions/41052538/git-error-gpg-failed-to-sign-data
export GPG_TTY=$(tty)

[ -f /usr/share/nvm/init-nvm.sh ] && source /usr/share/nvm/init-nvm.sh

[ -f ~/.exports.local ] && source ~/.exports.local
