	email = 29968201+Nathan13888@users.noreply.github.com
[core]
	editor = /usr/bin/nano # nano is a bit faster imo
	autocrlf = input
[commit]
	template = ~/.gitmessage.txt
[push] # http://stackoverflow.com/a/23918418/89484
	default = current
	followTags = true
[merge]
	tool = vimdiff
	renameLimit = 0
[fetch]
	prune = true
[stash]
	showPatch = true
[log]
	date = relative
[credential]
	helper = store
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[color]
	diff = auto
	status = auto
	branch = auto
[color "status"]
	added = green
	changed = blue
	untracked = red 
[color "diff"]
	meta = yellow
	old = red 
	new = green

[hub]
	protocol = https
