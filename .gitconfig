	email = 29968201+Nathan13888@users.noreply.github.com
[core]
	editor = /usr/bin/nano # nano is a bit faster imo for just typing a message
	autocrlf = input
[credential]
	helper = store
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[color]
	diff = auto
	status = auto
	branch = auto
[color "status"]
	added = green
	changed = blue
	untracked = red 
[color "diff"]
	meta = yellow
	old = red 
	new = green

[hub]
	protocol = https
