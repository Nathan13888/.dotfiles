bindsym $mod+Control+h resize shrink width 10px or 10ppt
bindsym $mod+Control+j resize shrink height 10 px or 10 ppt
bindsym $mod+Control+k resize grow height 10 px or 10 ppt
bindsym $mod+Control+l resize grow width 10 px or 10 ppt

# Set shut down, restart and locking features
bindsym $mod+Escape mode "$mode_system"
set $mode_system (l)ock, (e)xit, switch_(u)ser, (s)uspend, (h)ibernate, (r)eboot, (Shift+s)hutdown

# [[ $(cat /proc/1/comm) == "systemd" ]] && logind=systemctl || logind=loginctl
set $logind systemctl

mode "$mode_system" {
    bindsym l exec --no-startup-id $lockcommand, mode "default"
    bindsym s exec --no-startup-id $lockcommand && $logind suspend, mode "default"
    bindsym u exec --no-startup-id dm-tool switch-to-greeter, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym h exec --no-startup-id $lockcommand, mode "default"
    bindsym r exec --no-startup-id reboot, mode "default"
    bindsym Shift+s exec --no-startup-id shutdown, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

