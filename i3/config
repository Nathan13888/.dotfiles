# Fcitx
exec fcitx5

# Flameshot screenshot tool
exec flameshot

# Picom
exec_always --no-startup-id picom

# Polybar
exec_always --no-startup-id source ~/.config/polybar/launch.sh

# Hide cursor when typing
exec --no-startup-id xbanish

# Enable Numpad Lock
exec_always --no-startup-id numlockx

# Wallpaper Timeout
set $wpto 900
# Feh
# *optional* argument: --no-fehbg
exec --no-startup-id watch -n $wpto feh --bg-scale --randomize ~/Desktop/Wallpapers/ &
#watch -n $wpto exec ~/.fehbg

# Notifications - Dunst
exec --no-startup-id dunst

# Faster key repeat and delay
exec_always --no-startup-id xset r rate 210 40

# Change Mouse Acceleration
exec_always --no-startup-id xset m 3/2

# Remap CAPS LOCK key
exec_always xmodmap -e "clear lock"
exec_always xmodmap -e "keycode 66 = Escape Caps_Lock NoSymbol NoSymbol"

set $lockcommand ~/.local/bin/lock.sh

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- $lockcommand --nofork

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec --no-startup-id nm-applet

exec --no-startup-id pa-applet

# Autostart Scripts
exec_always --no-startup-id bash ~/.local/bin/fetchcord.sh

