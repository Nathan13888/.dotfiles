[module/date]
type = internal/date
interval = 3

date = " %a, %b %d"
date-alt = ""

time = "%l:%M %p"
time-alt = ${self.time}
;time-alt = "%I:%M %p"

format-prefix = " "
format-foreground = ${colors.date}
;format-underline = ${colors.underline}

label = %date% %time%

[module/speedtest]
type = custom/script
exec-if = hash speedtest
exec = echo " Speedtest"
format-foreground = ${colors.speedtest}

[module/transmission]
type = custom/script
exec-if = hash transmission-gtk
exec = echo "Transmission"
interval = 5
click-left = transmission-gtk
format-prefix = "ﯲ "
format-foreground = ${colors.transmission}

[module/pacman]
type = custom/script
exec = echo "$(yay -Qu | wc -l) of $(pacman -Q | wc -l) Updates"
interval = 3600
click-left = $TERMINAL --hold -e neofetch

format-prefix = "  "
format-foreground = ${colors.pacman}
;format-underline = ${colors.underline}

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <ramp-volume> <label-volume>
format-volume-font = 3
label-volume = %percentage%%
format-volume-foreground = ${colors.vol-active}

label-muted =  muted
label-muted-foreground = ${colors.vol-mute}

; Only applies if <ramp-volume> is used
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

click-right = pavucontrol &

[module/microphone]
type = custom/script
#exec-if = 
exec = bash ~/.local/bin/volume.sh isMMicon
interval = 1
format-foreground = ${colors.microphone}

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
;format-underline = ${colors.underline}
format-warn = <ramp> <label-warn>
;format-warn-underline = ${colors.alert}

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.secondary}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.icons}

