; important labels
font2 = MesloLGS Nerd Font:style=Bold:size=22;0
; emojis
font3 = MesloLGS Nerd Font:style=Regular:size=20;-1
; rampcore
font4 = MesloLGS Nerd Font:style=Regular:size=24;-3

[colors]
background = #0B090A
foreground = #e0dede
background-alt = #323B49
foreground-alt = #9b8f8f

