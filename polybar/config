line-color = #f00

font-0 = ${var.font0}
font-1 = ${var.font1}
font-2 = ${var.font2}
font-3 = ${var.font3}
font-4 = ${var.font4}

modules-left = i3 xwindow
modules-right = cpu memory filesystem pulseaudio date
#modules-right = kernel cpu memory filesystem speedtest pulseaudio transmission pacman date

tray-position = right
tray-padding = 3
